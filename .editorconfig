# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
max_line_length = 80
trim_trailing_whitespace = true
insert_final_newline = true

[*.{nix,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[README.md]
# NOTE: The README.md contains a Nix example, which is indented by two spaces.
# We need to reduce the indent size here to avoid any linting issue.
indent_size = 2
# NOTE: The README.md contains some examples with URLs being too long to fit on
# 80-character lines.
max_line_length = 120
